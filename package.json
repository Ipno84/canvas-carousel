{
  "name": "@ipno84/canvas-carousel",
  "version": "0.0.1",
  "description": "Javascript module that handle an image carousel inside a canvas context",
  "main": "index.js",
  "repository": "https://github.com/Ipno84/canvas-carousel.git",
  "author": "Marco Abate <marcoabate1984@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "shx rm -rf _bundles lib lib-esm",
    "start": "webpack-dev-server --open --config webpack.config.dev.js",
    "build:example": "webpack --config webpack.config.prod.example.js --no-stats",
    "build:amd": "webpack --config webpack.config.prod.amd.js --no-stats",
    "build:cjsm": "webpack --config webpack.config.prod.cjsm.js --no-stats",
    "build:cjs2": "webpack --config webpack.config.prod.cjs2.js --no-stats",
    "build:cjs": "webpack --config webpack.config.prod.cjs.js --no-stats",
    "build:umd": "webpack --config webpack.config.prod.umd.js --no-stats",
    "build:umd:min": "webpack --config webpack.config.prod.umd.min.js --no-stats",
    "build:tsc": "tsc && tsc -m es6 --outDir lib-esm",
    "changelog": "auto-changelog -p",
    "dist": "yarn clean; yarn build:tsc; yarn build:amd; yarn build:cjsm; yarn build:cjs2; yarn build:cjs; yarn build:umd; yarn build:umd:min; yarn build:example;",
    "test": "jest",
    "test:watch": "jest --watch",
    "semver:patch": "yarn version --no-git-tag-version --no-commit-hooks --patch",
    "semver:minor": "yarn version --no-git-tag-version --no-commit-hooks --minor",
    "semver:major": "yarn version --no-git-tag-version --no-commit-hooks --major",
    "preversion": "yarn test",
    "postversion": "yarn changelog; yarn dist",
    "example": "nws -d ./example"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "devDependencies": {
    "@types/jest": "^29.2.1",
    "auto-changelog": "^2.4.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^9.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.2.2",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^29.2.2",
    "nws": "^1.1.1",
    "prettier": "^2.7.1",
    "resize-observer-polyfill": "^1.5.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.0.3",
    "ts-jest-mock": "^1.1.33",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}
